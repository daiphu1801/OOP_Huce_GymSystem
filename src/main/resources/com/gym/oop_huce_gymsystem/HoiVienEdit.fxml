<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.DatePicker?>
<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gym.oop_huce_gymsystem.controller.HoiVienController.HoiVienEditController" stylesheets="@style.css">
    <HBox prefHeight="54.0" prefWidth="958.0">
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToList" prefHeight="50.0"
                prefWidth="128.0"
                style="-fx-background-radius: 30px; -fx-background-color: #1a1a1a; -fx-cursor: hand; -fx-text-fill: white;"
                styleClass="search_button" text="Trở về">
            <font>
                <Font name="Tektur Regular" size="22.0"/>
            </font>
        </Button>
    </HBox>
    <HBox prefHeight="617.0" prefWidth="958.0">
        <VBox alignment="CENTER_LEFT" prefHeight="617.0" prefWidth="500.0">
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="534.0">
                <Label text="Mã thẻ: " style="-fx-text-fill: white;">
                    <font>
                        <Font name="Tektur Regular" size="31.0"/>
                    </font>
                </Label>
                <TextField fx:id="memberIdField" editable="false" prefWidth="300.0"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;">
                    <font>
                        <Font name="Tektur Regular" size="31.0"/>
                    </font>
                </TextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="534.0">
                <Label text="Họ và tên: " style="-fx-text-fill: white;">
                    <font>
                        <Font name="Tektur Regular" size="31.0"/>
                    </font>
                </Label>
                <TextField fx:id="nameField" prefWidth="300.0"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;">
                    <font>
                        <Font name="Tektur Regular" size="31.0"/>
                    </font>
                </TextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="534.0">
                <Label text="Số điện thoại: " style="-fx-text-fill: white;">
                    <font>
                        <Font name="Tektur Regular" size="31.0"/>
                    </font>
                </Label>
                <TextField fx:id="phoneField" prefWidth="300.0"
                           style="-fx-background-color: #2a2a2a; -fx-text-fill: white;">
                    <font>
                        <Font name="Tektur Regular" size="31.0"/>
                    </font>
                </TextField>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="534.0">
                <Label text="Loại thẻ: "
                       style="-fx-text-fill: white; -fx-font-family: 'Tektur Regular'; -fx-font-size: 31;">
                </Label>
                <ComboBox fx:id="membershipTypeComboBox" prefWidth="300.0"
                          style="-fx-background-color: black;
                     -fx-text-fill: white;
                     -fx-font-family: 'Tektur Regular';
                     -fx-font-size: 31;
                     -fx-border-color: purple;
                     -fx-border-width: 2;
                     -fx-border-radius: 5;
                     -fx-background-radius: 5;">
                </ComboBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="534.0">
                <Label text="Gói tập: "
                       style="-fx-text-fill: white; -fx-font-family: 'Tektur Regular'; -fx-font-size: 31;"/>
                <ComboBox fx:id="trainingPackageComboBox" prefWidth="300.0"
                          style="-fx-background-color: black;
                     -fx-text-fill: white;
                     -fx-font-family: 'Tektur Regular';
                     -fx-font-size: 31;
                     -fx-border-color: purple;
                     -fx-border-width: 2;
                     -fx-border-radius: 5;
                     -fx-background-radius: 5;"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="534.0">
                <Label text="Ngày đăng ký: " style="-fx-text-fill: white;">
                    <font>
                        <Font name="Tektur Regular" size="31.0"/>
                    </font>
                </Label>
                <DatePicker fx:id="registrationDateField" prefWidth="300.0" style="-fx-background-color: #2a2a2a; -fx-text-fill: white;" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveChanges" prefHeight="50.0"
                        prefWidth="289.0"
                        style="-fx-background-radius: 30px; -fx-background-color: linear-gradient(to right, #0093ff, #9700ff); -fx-cursor: hand;"
                        styleClass="search_button" text="Lưu thay đổi">
                    <font>
                        <Font name="Tektur Regular" size="22.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </HBox>
</VBox>